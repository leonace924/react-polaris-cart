{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "src",
    "module": "esnext",
    "target": "es2015",
    "lib": ["es6", "dom", "dom.iterable", "esnext"],
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "isolatedModules": true
  },
  "include": ["src"]
}
